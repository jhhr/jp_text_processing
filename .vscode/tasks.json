// filepath: /.vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python file with setup",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/test/run_with_setup.py",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}